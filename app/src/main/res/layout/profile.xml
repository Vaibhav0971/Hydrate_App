        app:layout_constraintGuide_percent="0.08620" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h013"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13669" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.175000" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h023"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22000" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h068"
        android:layout_width="wrap_content"
