        app:layout_constraintGuide_percent="0.78940" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
