<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="10dp">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line"
                android:top="1dip" >
                <size android:height="20dp"
                    android:width="20dp"/>
                <stroke
                    android:width="3dip"
                    android:color="#000000" />
            </shape>
        </rotate>
    </item>
    <item android:top="10dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line"
                android:top="1dip" >
                <size android:height="20dp"
                    android:width="20dp"/>
                <stroke
                    android:width="3dip"
                    android:color="#000000" />
            </shape>
        </rotate>
    </item>
</layer-list>